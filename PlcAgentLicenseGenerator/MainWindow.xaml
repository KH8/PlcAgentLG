<Window x:Class="PlcAgentLicenseGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PlcAgent License Generator" Height="160" Width="500" ResizeMode="NoResize" Icon="graph.ico">
    <Grid HorizontalAlignment="Center">
        <TextBlock Name="SignatureLabel" Text="Label" TextWrapping="Wrap" HorizontalAlignment="Left" Height="45" Margin="5,10,0,0" VerticalAlignment="Top" Width="470"/>
        <Label Content="License Owner Name:" HorizontalAlignment="Left" Margin="0,53,0,0" VerticalAlignment="Top" Width="140"/>
        <TextBox Name="NameTextBox" HorizontalAlignment="Left" Height="23" Margin="145,55,0,0" TextWrapping="Wrap" Text="noName" VerticalAlignment="Top" Width="320"/>
        <Button Content="Generate" HorizontalAlignment="Left" Margin="390,83,0,0" VerticalAlignment="Top" Width="75" Click="GenerateLicense"/>
        <Label Name="StatusLabel" Content="click to generate a license file" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="5,83,0,0" VerticalAlignment="Top" FontSize="10" Width="380"/>

    </Grid>
</Window>
